<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        >
        <lecho.lib.hellocharts.view.PieChartView
            android:id="@+id/dataanalysechart"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <lecho.lib.hellocharts.view.PieChartView
            android:id="@+id/newdatalearnchart"
            android:layout_width="150dp"
            android:layout_height="150dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/datacharttext"
            />

        <TextView
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/newdatacharttext"
             />
        >
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <TextView
            android:text="TextView"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/countrybar" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/beisongbar"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="bottom"
            android:layout_marginBottom="10dp">
            <Button
                android:text="开始任务"
                android:background="@drawable/buttonshape1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/todaytask"
                android:layout_weight="1" />
            <Button
                android:text="记忆管理"
                android:background="@drawable/buttonshape1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/memoryfunction"
                android:layout_weight="1" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>